node{

    stages {
        stage('Checkout') {
        git 'https://github.com/Ayshalti/sonarqube-scanner-gradle.git'
        }
        stage('Analyse') {
            steps {
                   sudo chmod -R ug+w
                   sh "${gradleHome}/bin/gradle sonarqube -Dsonar.host.url=${config.sonarHostUrl} -Dsonar.projectName='sonarqube-scanner-gradle' -Dsonar.working.directory=pwd()/build/sonar
                   sh './gradlew --info sonarqube'
        }
    }
}